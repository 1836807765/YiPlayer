<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp" >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/local_video_thumb"
            android:background="@color/white"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/local_video_info_bg"
            android:paddingTop="5dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/local_video_duration"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:text="10:47"
                android:textSize="@dimen/local_video_info_text_size"
                android:textColor="@color/white"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/local_video_info"
                android:layout_margin="5dp"
                android:text="1个视频"
                android:layout_weight="0.5"
                android:textSize="@dimen/local_video_info_text_size"
                android:textColor="@color/white"
                android:gravity="right"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/local_video_title"
        android:maxLines="2"
        android:text="Local video title too much long, Local video title too much long"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"/>
</LinearLayout>